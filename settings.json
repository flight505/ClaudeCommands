{
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Read(.env*)",
      "Read(**/.env*)",
      "Read(**/.*)",
      "Bash(git status)",
      "Bash(git diff)",
      "Bash(git log)",
      "Bash(git show)",
      "Bash(git branch)",
      "Bash(git tag)",
      "Bash(find:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(wc:*)",
      "Bash(awk:*)",
      "Bash(sed:*)",
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(npm run build:*)",
      "Bash(pytest:*)",
      "Bash(uv run python:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(pip:*)",
      "Bash(pip3:*)",
      "Bash(uv:*)",
      "Bash(make:*)",
      "Bash(./*.sh)",
      "Bash(./scripts/*.sh)",
      "Read(~/.zshrc)",
      "Read(~/.bashrc)",
      "Read(~/.bash_profile)"
    ],
    "deny": [],
    "ask": [
      "Bash(rm:*)",
      "Bash(sudo:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git tag:*)",
      "Bash(git reset:*)",
      "Bash(git checkout:*)",
      "Bash(./run_*.sh)",
      "Bash(./deploy*.sh)",
      "Bash(docker:*)",
      "Bash(kubectl:*)",
      "Bash(terraform:*)",
      "Bash(curl http://*)",
      "Bash(wget http://*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "env": {
    "PYTHONPATH": "${PWD}"
  }
}
